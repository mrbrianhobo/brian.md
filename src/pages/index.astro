  <Header />
  <main class="flex grow flex-col items-center m-8 md:m-16 lg:m-24">
    <MotionDiv
      client:load
      className="w-full max-w-lg md:max-w-xl lg:max-w-2xl text-2xl md:text-3xl lg:text-4xl font-medium"
      initial="hidden"
      animate="visible"
      variants={fadeIn}
    >
      <h1>
        <MotionSpan
          client:load
          className="inline-block origin-bottom-right cursor-grab select-none"
          animate="initial"
          whileHover="hover"
          whileTap="tap"
